{% block base %}{% if not ajaxRequest %}
    <!DOCTYPE html>
    <html lang="nl">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="Content-type" content="text/html; charset=UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta name="robots" content="follow, index">
        <link rel="shortcut icon" href="/assets/images/favicon.png" type="image/x-icon">
        <title>{{ page|capitalize }} - {{ config('hotel_settings.hotel_name') }}</title>

        <meta name="description"
              content="Virtual world for young people where you can make and meet friends. Meet and make friends, chat with others, create your own avatar, design your own room for free and much more ...">
        <meta name="keywords"
              content="cosmic, {{config('hotel_settings.hotel_name')}}, virtual, world, social network, free, community, avatar, chat, online, teen, roleplaying, join, social, groups, forums, safe, play, games, online, friends, teens, rare, rare meubi, collect, make, collect, contact, meubi, furniture, pets, furnish room, share, expression, badges, hangout, music, celebrity, VIP visits, celebs, mmo, mmorpgs, massive multiplayer, dox , dox hotel, dox hotel, space hotel, space hotel, space, sunnie, sunnie day, sunnieday, habbo, HABBO, habbo hotel, habboo, habbo city, habbocity, cool, virtual world, vip, retro, retro hotel, habbo retro, free , free habbo, holo">

        <meta property="og:title" content="{{config('hotel_settings.hotel_name')}}">
        <meta property="og:type" content="website">
        <meta property="og:url" content="">
        <meta property="og:image" content="/assets/images/summary-picture.png">
        <meta property="og:description" content="Virtual world where you can make and meet friends.">
        <meta property="og:site_name" content="{{config('hotel_settings.hotel_name')}}">

        <!-- CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/assets/css/all.min.css" type="text/css" />

    </head>

    <body class="flex-container flex-direction-column">
    <noscript>
        <style>
            .loading-container {
                display: none;
            }
        </style>
    </noscript>
    <div class="loading-container">
        <div id="loading-background"></div>
        <div class="loading-content">
            <div class="c100 center">
                <span></span>
                <div class="slice">
                    <div class="bar"></div>
                    <div class="fill"></div>
                </div>
            </div>
            <div class="loading-bodytext"></div>
        </div>
    </div>

    <div class="page-loading"></div>
    <div class="notifications-container"></div>

    <div class="cookies-accept-container">
        <div class="close-container">&times;</div>
        {{site.sitename}} {{locale_base.cookies}}
        <a href="/help" target="_blank">{{locale_base.read_more}}</a>
    </div>

    <nav class="navigation-container">
        <ul class="navigation-menu flex-container">
            <li class="navigation-item {% if "home" in page %}selected {% endif %}" data-category="home"><a
                        href="{{ url_for('home') }}">{{lang('base.navbar.home')}}</a></li>
            <li class="navigation-item has-items {% if "article" in page %}selected {% endif %}"
                data-category="community">
                <a>{{lang('base.navbar.community')}}</a>
                <ul class="navigation-submenu">
                    <li class="navigation-subitem"><a href="/articles">{{lang('base.navbar.community.articles')}}</a></li>
                    <li class="navigation-subitem"><a href="{{ url_for('community-highscores') }}">{{lang('base.navbar.community.highscores')}}</a></li>
                </ul>
            </li>

            {% if user %}
                <li class="navigation-item navigation-right-side-item has-items">
                    <a href="#">
                        <div class="account-avatar"><img src="{{ config('hotel_settings.imaging_url') }}/?figure={{user.look}}&gesture=sml"
                                                         alt="{{player.username}}" class="pixelated"></div>
                        <span>{{user.username}}</span>
                    </a>
                    <ul class="navigation-submenu">
                        <li class="navigation-subitem"><a
                                    href="/profile/{{user.username}}">{{ lang('base.navbar.user.profile') }}</a></li>
                        <li class="navigation-subitem"><a href="/settings">{{ config('hotel_settings.hotel_name') }} ID
                                {{ lang('base.navbar.user.settings') }}</a></li>
                        <li class="navigation-subitem"><a href="{{ url_for('auth_logout') }}" target="_self">{{ lang('base.navbar.user.logout') }}</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </nav>




    <header class="header-container pixelated is-small">
        <div class="header-content">
            <div class="logo"><a href="{{ url_for('home') }}"><img class="inline-block" src="/assets/images/cosmic-logo.gif"
                                                                   style="margin-top: 30px;"></a></div>
            <div class="account-container">
                <div class="account-title">
                    {{locale_base.header_slogan2}}
                </div>

                <div class="account-buttons">
                    <div class="enter-hotel">
                        <div class="inner">
                            {% if user %}
                                <a href="{{ url_for('hotel') }}">
                                    {{lang('base.header.to')}} {{ config('hotel_settings.hotel_name') }}
                                </a>
                            {% else %}
                                <a href="{{ url_for('auth_sign-up') }}">
                                    {{lang('base.header.register')}}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="content-bar"></div>

    <section class="page-container content" data-page="{% if page is empty %}lost{% else %}{{page}}{% endif %}">
        {% block body %} {% endblock %}
    </section>

    <footer class="footer-container">
        <div class="footer-copyright">&copy; 2019 {{site.domain}} | <a href="/help/">{{locale_base.footer_helptool}}</a> | <a
                    href="#" class="about-dialog-button">Cosmic</a></div>
    </footer>

    {% if user %}
        <div id="hotel-container">
            <div class="client-buttons">
                <button class="client-close rounded-button blue plain">
                    <i class="client-icon client-close-icon"></i>
                    <span class="client-close-expand"><span>Web</span></span>
                </button>
                <button class="client-fullscreen rounded-button blue plain">
                    <i class="client-icon client-fullscreen-icon"></i>
                    <i class="client-icon client-fullscreen-icon-back hidden"></i>
                </button>

                <button class="client-count rounded-button blue plain">
                    {% if 'housekeeping' in permissions %}<a href="/housekeeping" target="_blank"
                                                             style="color:#fff;text-decoration: none;"><i class="fa fa-user"></i> <b
                                id="count">{{online_count}}</b></a>{% else %}<i class="fa fa-user"></i> <b
                            id="count">{{online_count}}</b>{% endif %}
                </button>

                <button class="client-radio rounded-button blue plain">
                    <audio controls id="stream" style="display:none">
                        <source type="audio/mpeg">
                    </audio>

                    <i class="fa fa-play"></i>
                    <i class="fa fa-pause" style="display: none"></i>

                    <i class="fa fa-volume-down"></i>
                    <i class="fa fa-volume-up"></i>
                </button>
            </div>
        </div>
    {% endif %}

    <script type="text/javascript" src="/assets/js/all.min.js?v=49c286ab84367458fb462dc80e5f5b07"></script>
    </body>

    </html>
{% else %}
    {% set page = page %}
    {% set array = [ {'data': block('body'), 'page':  page}] %}
    {{array|json_encode()}}
{% endif %}
{% endblock %}