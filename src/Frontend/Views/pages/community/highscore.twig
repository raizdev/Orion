                                    {%  if loop.index0 == 1 %}&amp;head_direction=4&amp;direction=4&amp;crr=3&amp;gesture=sml&amp;size=m&amp;headonly=0{% endif %}
                                "
                            >
                        {% endfor %}
                    </div>
                </div>
                <div class="card-header">
                    <div class="card-header-title-container ng-star-inserted">
                        <div class="card-header-titles ng-star-inserted">
                            <h4 class="card-header-title">{{ lang('highscores.most.duckets') }}</h4>
                        </div>
