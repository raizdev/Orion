{% extends "Frontend/Views/layouts/app.twig" %}
{% block body %}
    <div class="page-content">
        <highscores class="default-section ranking-container">
            <div class="card">
                <div class="card-image top-users-image">
                    <div class="watching-people"></div>
                    <div class="podium">
                        {% for diamond in diamonds %}
                            <img alt="User avatar"
                                 class="avatar avatar-m
                                    {% if loop.first %}first{% endif %}
                                    {% if loop.last %}third{% endif %}
                                    {%  if loop.index0 == 1 %}second{% endif %}
                                 "
                                 src="{{ config('hotel_settings.imaging_url') }}/?figure={{ diamond.user.look }}
                                    {% if loop.first %}&amp;head_direction=3&amp;direction=3&amp;crr=3&amp;gesture=sml&amp;size=m&amp;headonly=0{% endif %}
                                    {% if loop.last %}&amp;head_direction=2&amp;direction=2&amp;crr=3&amp;gesture=sml&amp;size=m&amp;headonly=0{% endif %}
                                    {%  if loop.index0 == 1 %}&amp;head_direction=4&amp;direction=4&amp;crr=3&amp;gesture=sml&amp;size=m&amp;headonly=0{% endif %}
                                "
                            >
                        {% endfor %}
                    </div>
                </div>
                <div class="card-header">
                    <div class="card-header-title-container ng-star-inserted">
                        <div class="card-header-titles ng-star-inserted">
                            <h4 class="card-header-title">{{ lang('highscores.most.diamonds') }}</h4>
                        </div>
                    </div>
                </div>
                <div  class="card-content no-spacing">
                    <div class="highscore-row">
                        {% for diamond in diamonds %}
                        <div class="justify-between top-users-item no-spacing ng-star-inserted highscore">
                            <div class="self-baseline">
                                <img alt="User avatar" class="avatar avatar-m" src="{{ config('hotel_settings.imaging_url') }}/?figure={{ diamond.user.look }}&amp;head_direction=3&amp;direction=3&amp;crr=3&amp;gesture=sml&amp;size=m&amp;headonly=0">
                            </div>
                            <a href="#">{{ diamond.user.username }}</a>
                            <span class="amount">
                                <i class="icon-diamonds"></i> {{ diamond.amount }}
                            </span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </highscores>
        <highscores class="default-section ranking-container">
            <div class="card">
                <div class="card-image top-users-image card-image-top">
                    <div class="watching-people"></div>
                    <div class="podium">
                        {% for ducket in duckets %}
